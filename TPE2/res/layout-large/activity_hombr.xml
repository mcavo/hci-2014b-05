<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:longClickable="false"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CFCFCF" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="130dp" >

                <ImageButton
                    android:id="@+id/calzado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/calzadoDesc"
                    android:onClick="getFootwearM"
                    android:src="@drawable/hombre_calzado" />

                <TextView
                    android:id="@+id/calzadoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/calzado"
                    android:layout_alignLeft="@+id/calzado"
                    android:layout_alignRight="@+id/calzado"
                    android:layout_alignTop="@+id/calzado"
                    android:paddingLeft="220dp"
                    android:paddingTop="85dp"
                    android:text="@string/calzado"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/indumentaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calzado"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/indumentariaDesc"
                    android:onClick="getCostumeM"
                    android:src="@drawable/hombre_indumentaria" />

                <TextView
                    android:id="@+id/indumentariaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/indumentaria"
                    android:layout_alignLeft="@+id/indumentaria"
                    android:layout_alignRight="@+id/indumentaria"
                    android:layout_alignTop="@+id/indumentaria"
                    android:paddingLeft="40dp"
                    android:paddingTop="85dp"
                    android:text="@string/indumentaria"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/accesorios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indumentaria"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/accesoriosDesc"
                    android:onClick="getFittingM"
                    android:src="@drawable/hombre_accesorios" />

                <TextView
                    android:id="@+id/accesoriosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/accesorios"
                    android:layout_alignLeft="@+id/accesorios"
                    android:layout_alignRight="@+id/accesorios"
                    android:layout_alignTop="@+id/accesorios"
                    android:paddingLeft="200dp"
                    android:paddingTop="85dp"
                    android:text="@string/accesorios"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#808080"
        android:choiceMode="singleChoice"
        android:divider="@android:color/white"
        android:dividerHeight="0.5dp" />

</android.support.v4.widget.DrawerLayout>